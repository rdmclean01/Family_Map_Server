<?xml version = "1.0"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rdmcl.client.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:horizontalSpacing="0dp"
            android:rowCount="8"
            android:useDefaultMargins="false"
            android:verticalSpacing="0dp">

            <TextView
                android:id="@+id/hostTextView"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:layout_row="0"
                android:padding="0dp"
                android:text="@string/login_server_host"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/hostEditText"
                android:text="@string/default_host"
                android:layout_column="1"
                android:layout_margin="0dp"
                android:layout_row="0"
                android:hint="@string/login__hint_host"
                android:inputType="text"
                android:padding="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/portTextView"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:layout_row="1"
                android:padding="0dp"
                android:text="@string/login_server_port"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/portEditText"
                android:text="@string/default_port"
                android:layout_column="1"
                android:layout_margin="0dp"
                android:layout_row="1"
                android:hint="@string/login_hint_port"
                android:inputType="text"
                android:padding="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/userTextView"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:layout_row="2"
                android:padding="0dp"
                android:text="@string/login_user_name"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/userEditText"
                android:text="@string/default_username"
                android:layout_column="1"
                android:layout_margin="0dp"
                android:layout_row="2"
                android:inputType="text"
                android:padding="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/passwordTextView"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:layout_row="3"
                android:padding="0dp"
                android:text="@string/login_password"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/passwordEditText"
                android:text="@string/default_password"
                android:layout_column="1"
                android:layout_margin="0dp"
                android:layout_row="3"
                android:inputType="text"
                android:padding="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/firstTextView"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:layout_row="4"
                android:padding="0dp"
                android:text="@string/login_first_name"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/firstEditText"
                android:text="@string/default_firstname"
                android:layout_column="1"
                android:layout_margin="0dp"
                android:layout_row="4"
                android:inputType="text"
                android:padding="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/lastTextView"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:layout_row="5"
                android:padding="0dp"
                android:text="@string/login_last_name"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/lastEditText"
                android:text="@string/default_lastname"
                android:layout_column="1"
                android:layout_margin="0dp"
                android:layout_row="5"
                android:inputType="text"
                android:padding="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/emailTextView"

                android:layout_column="0"
                android:layout_margin="0dp"
                android:layout_row="6"
                android:padding="0dp"
                android:text="@string/login_email"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/emailEditText"
                android:text="@string/default_email"
                android:layout_column="1"
                android:layout_margin="0dp"
                android:layout_row="6"
                android:inputType="text"
                android:padding="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/genderTextView"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:layout_row="7"
                android:padding="0dp"
                android:text="@string/login_gender"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/gender_group"
                android:layout_column="1"
                android:layout_row="7"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_male"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_male_checkbox" />

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_female_checkbox" />

            </RadioGroup>
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_login" />

            <Button
                android:id="@+id/button_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_register" />

            <Button
                android:id="@+id/button_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
