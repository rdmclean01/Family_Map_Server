<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rdmcl.client.PeopleActivity">

    <TextView
        android:id="@+id/selected_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INPUT FIRST"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FIRST NAME" />

    <TextView
        android:id="@+id/selected_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INPUT LAST"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LAST NAME" />

    <TextView
        android:id="@+id/selected_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INPUT GENDER"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GENDER" />

    <TextView
        android:id="@+id/show_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LIFE EVENTS"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_life_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/show_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAMILY"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_family_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</LinearLayout>
